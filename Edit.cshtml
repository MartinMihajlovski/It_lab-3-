@model WebApplication8.Models.Hospital

@{
    ViewBag.Title = "Edit Hospital";
}

<h2>Edit Hospital</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(h => h.Id)

    <div class="form-group">
        @Html.LabelFor(h => h.Name)
        @Html.TextBoxFor(h => h.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(h => h.Address)
        @Html.TextBoxFor(h => h.Address, new { @class = "form-control" })
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
}
