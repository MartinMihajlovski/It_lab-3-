<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - HospitalApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">🏥 HospitalApp</a>
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Patients", "Index", "Patients", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Doctors", "Index", "Doctors", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Hospitals", "Index", "Hospitals", null, new { @class = "nav-link" })</li>
            </ul>
        </nav>

        <main role="main">
            @RenderBody()
        </main>
    </div>
</body>
</html>
